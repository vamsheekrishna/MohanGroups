<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="myAdapter"
            type="com.example.mybusinesstracker.sales.ui.sales.CustomerBaseSalesAdapter" />
        <variable
            name="customerinfo"
            type="com.example.mybusinesstracker.sales.ui.sales.CustomerSaleModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sales.ui.sales.CustomerBasedSalesFragment">
    <LinearLayout
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/header_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_alignParentStart="true"
                    android:id="@+id/customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_1"
                    android:layout_gravity="top|left"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:text="@={customerinfo.customerSaleInfo.name}"/>
                <TextView
                    android:layout_below="@+id/customer_name"
                    android:layout_alignParentStart="true"
                    android:id="@+id/selected_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_1"
                    android:layout_gravity="center|left"
                    android:paddingStart="4dp"
                    android:textStyle="bold|italic"
                    android:textColor="@android:color/white"
                    android:text="27/04/2018"/>
                <LinearLayout
                    android:layout_toLeftOf="@+id/header_right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ice_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/total_blocks"
                        android:textStyle="bold"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:paddingStart="8sp"
                        android:id="@+id/ice_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/header_1"
                        android:textColor="@android:color/white"
                        android:textStyle="bold|italic"
                        android:text="@={``+customerinfo.customerSaleInfo.totalBlock}"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/header_right"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/total_amount"
                        android:textStyle="bold"
                        android:textColor="@color/blue"/>
                    <TextView
                        android:id="@+id/total_amount"
                        android:paddingLeft="8sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/header_1"
                        android:textColor="@android:color/white"
                        android:textStyle="bold|italic"
                        android:text="@={``+customerinfo.customerSaleInfo.totalAmount}"/>
                </LinearLayout>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:paddingLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/blue"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_3"
                android:gravity="center|left"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:text="@string/paid_amount"/>
            <TextView
                android:paddingLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_3"
                android:gravity="center|left"
                android:background="@color/dark_pink"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:text="@string/due_amount"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/total_paid"
                android:background="@color/blue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sales_header_count_size_big"
                android:gravity="center|left"
                android:text="@={``+customerinfo.customerSaleInfo.totalPaid}"/>
            <TextView
                android:background="@color/dark_pink"
                android:id="@+id/total_due"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:textColor="@color/white"
                android:textSize="@dimen/sales_header_count_size_big"
                android:gravity="center|left"
                android:text="@={``+customerinfo.customerSaleInfo.totalDue}"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/customer_base_sales_row_header"
        android:id="@+id/row_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/row_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adapter="@{myAdapter}"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_alignParentBottom="true"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/labour_amount"
        android:gravity="center|right"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:textSize="@dimen/header_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_gray"
            android:text="Labor charge:" />
        <TextView
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_2"
            android:textColor="@color/dark_pink"
            android:textStyle="bold|italic"
            android:text="@={``+customerinfo.customerSaleInfo.totalLabourCharges}" />
    </LinearLayout>
</RelativeLayout>
</layout>