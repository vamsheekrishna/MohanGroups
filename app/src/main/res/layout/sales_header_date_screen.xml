<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header_date"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_alignParentStart="true"
                android:id="@+id/selected_date"
                style="@style/date_rows_txt"
                android:textSize="@dimen/header_1"
                android:layout_gravity="center|left"
                android:textStyle="bold|italic"
                android:textColor="@android:color/white"
                android:layout_margin="32dp"
                android:layout_centerHorizontal="true"
                android:text="12/04/2018"/>
            <TextView
                android:layout_marginEnd="-16dp"
                android:id="@+id/ice_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_3"
                android:text="@string/total_blocks"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/ice_count"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_margin="32dp"
                android:id="@+id/ice_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_1"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:text="20"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/total_amount"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/paid_amount"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/due_amount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sales_header_count"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="80000"/>
        <TextView
            android:id="@+id/total_paid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sales_header_count"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="75000"/>
        <TextView
            android:id="@+id/total_due"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sales_header_count"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="5000"/>
    </LinearLayout>
</LinearLayout>
