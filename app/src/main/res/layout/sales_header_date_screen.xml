<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header_date"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_alignParentStart="true"
                android:id="@+id/selected_date"
                style="@style/date_rows_txt"
                android:textSize="@dimen/header_1"
                android:layout_gravity="center|left"
                android:textStyle="bold|italic"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:layout_margin="16dp"
                android:layout_centerHorizontal="true"
                android:text="12/04/2018"/>
            <LinearLayout
                android:layout_toLeftOf="@+id/header_right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ice_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/total_blocks"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:paddingLeft="8sp"
                    android:id="@+id/ice_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/header_right"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/total_amount"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/total_amount"
                    android:paddingLeft="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_1"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:text="200000000"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <!--<TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:gravity="center|left"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:text="@string/total_amount"/>-->
        <TextView
            android:paddingLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:gravity="center|left"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:text="@string/paid_amount"/>
        <TextView
            android:paddingLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:gravity="center|left"
            android:background="@color/dark_pink"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:text="@string/due_amount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <!--<TextView
            android:id="@+id/total_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sales_header_count"
            android:gravity="center|left"
            android:text="800008888"/>-->
        <TextView
            android:id="@+id/total_paid"
            android:background="@color/blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sales_header_count"
            android:gravity="center|left"
            android:text="800008888"/>
        <TextView
            android:background="@color/dark_pink"
            android:id="@+id/total_due"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:textColor="@color/white"
            android:textSize="@dimen/sales_header_count"
            android:gravity="center|left"
            android:text="800008888"/>
    </LinearLayout>
</LinearLayout>
