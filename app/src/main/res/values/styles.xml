<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="cabin_left_text_style" parent="cabin_text_style">
        <item name="android:layout_gravity">start|center</item>
        <item name="android:gravity">start|center</item>
    </style>
    <style name="cabin_right_text_style" parent="cabin_text_style">
        <item name="android:layout_gravity">end|center</item>
        <item name="android:gravity">end|center</item>
    </style>
    <style name="cabin_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:gravity">end|center</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="cabin_linear_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:weightSum">1</item>
    </style>
    <style name="sales_rows_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:gravity">end|center</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:background">@drawable/background_rectangle</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="sales_header_rows_txt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:background">@drawable/background_rectangle</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="date_rows_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

</resources>
